{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "heroku-postbuild": "cd frontend && npm install && npm run build",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "uvicorn backend.main:app --reload",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}